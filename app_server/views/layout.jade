doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name="author", content="Junwei Zhao")
    link(rel='icon', href='/images/favicon.ico')
    title= title
    link(rel='stylesheet', href='/bootstrap/css/journal.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    .container
      nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-main')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') ReviewU
          #navbar-main.navbar-collapse.collapse
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/') Home
              li
                a(href='/about') About
              if user
                label.label-default username
              else
                li
                  a(href='#') SignUp
                li
                  a(href='#') LogIn
      block content
      .navbar.navbar-default.navbar-fixed-bottom#footer(role='footer')
        .container
          .row
            .col-xs-12.col-sm-6.col-md-4
              h4 About
              .hline
            .col-xs-12.col-sm-6.col-md-4
              h4 Thing
              .hline
            .col-xs-12.col-sm-6.col-md-4
              h4 Contact
              .hline
          .row
            .col-xs-12
              small &copy; Junwei Zhao 2016

    script(src='/javascripts/jquery-2.2.4.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/javascripts/reviewU.js')
    script(src='/javascripts/validation.js')
